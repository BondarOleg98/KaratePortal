@model KaratePortal.Models.PersonKarate.KarateStudent

@{
    ViewBag.Title = "Delete student";
}
<br />
<br />
<br />
<h2>Delete a karate student</h2>

<h3>Are you sure you want to delete this?</h3>
<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            <b>Name</b>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            <b>Last name</b>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>

        <dt>
            <b>Age</b>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Age)
        </dd>

        <dt>
            <b>Country</b>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Country)
        </dd>

        <dt>
            <b>City</b>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.City)
        </dd>

        <dt>
            <b>Belt</b>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Belt)
        </dd>

        <dt>
            <b>Count years of training</b>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.YearsTraining)
        </dd>

        <dt>
            <b>Count of coaches</b>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CountCoach)
        </dd>

        <dt>
            <b>Sportsman status</b>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SportsmanStatus)
        </dd>

        <dt>
            <b>Like type of competitions</b>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LikeCompetition)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to show students", "ShowStudents", "Student")
        </div>
    }
</div>
