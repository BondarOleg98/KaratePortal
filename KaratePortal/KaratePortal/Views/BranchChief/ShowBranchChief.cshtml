@model IEnumerable<KaratePortal.Models.PersonKarate.BranchChief>

@{
    ViewBag.Title = "Show a branch chief";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Show a branch chief</h2>

<br />
<br />
<table class="table">
    <tr>
        <th>
            <b>Name</b>
        </th>
        <th>
            <b>Last name</b>
        </th>
        <th>
            <b>Country</b>
        </th>
        <th>
            <b>City</b>
        </th>
        <th>
            <b>Belt</b>
        </th>

        <th>
            <b>National role</b>
        </th>
        <th>
            <b>Name of branch</b>
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        if(!String.IsNullOrEmpty(item.NameBranch))
        {
            if (item.NameBranch != "Empty")
            {<tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Country)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Belt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NationalRole)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NameBranch)
                </td>

            </tr>
            }
        }


    }

</table>
